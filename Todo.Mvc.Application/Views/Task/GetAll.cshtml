@model IEnumerable<BusinessLayer.ViewModels.TodoTaskViewModel>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Domain.Models.User> SignInManager




@{ if (!SignInManager.IsSignedIn(User))
    {


    <div class="text-center">
        <h1 class="display-4 text-">Welcome to TODO Task</h1>
        <div class="login">
            <a class="login-link" asp-controller="User" asp-action="Login"><h3>Log In</h3></a>
            <p>if you have account login.</p>
        </div>

        <div class="register">
            <a class="register-link" asp-controller="User" asp-action="Register"><h3>Register</h3></a>
            <p>if you don't have acount register now.</p>
        </div>
    </div>
}
else
{
        ViewData["Title"] = "GetAll";
    



    <h1>GetAll</h1>

    
    <p>
        @Html.ActionLink("Create Task", "CreateTask", new { id = ViewBag.UserId })
       
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Priority)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TodoStatus)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TodoStatus)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditTask", new { id = item.Id }) |
                        @Html.ActionLink("Details", "GetById", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "DeleteTask", new { id = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
            }
        }
    <link href="~/css/MyCustomStyle.css" rel="stylesheet" />